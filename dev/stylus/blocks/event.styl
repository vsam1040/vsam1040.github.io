////////////////////////////////////////
// $Event card
////////////////////////////////////////

//////////////////////////////////////// Block variables

// Colors
$c-event_date_bg = $c-dark
$c-event_date_text = #9b242d
$c-event_date_number = $c-light
$c-event_date_hover_number = $c-accent
$c-event_date_bd = transparent
$c-event_date_bd_top = $c-dark
$c-event_date_hover_bd_top = $c-accent

$c-event_btn_bg = $c-dark
$c-event_btn_text = $c-light
$c-event_btn_hover_bg = $c-accent


//////////////////////////////////////// Block mixins and functions

//////////////////////////////////////// Block styles
$block = ".event"

{$block}
  float left
  gs-column(1,3,4%)

  &:hover &__date span
    background-color $c-event_date_hover_number

  &:hover &__date span:after
    border-top-color $c-event_date_hover_bd_top


  // $Event card date
  &__date
    font-size 30px
    color $c-event_date_text

    & span
      display block
      position relative
      width 88px
      height 88px
      margin 0 auto 30px
      padding 20px 0
      background-color $c-event_date_bg
      font-size 36px
      color $c-event_date_number
      font-weight bold

      &:after
        display block
        position absolute
        content ""
        bottom -14px
        left 50%
        margin-left -15px
        border-top 15px solid $c-event_date_bd_top
        border-right 15px solid $c-event_date_bd
        border-left 15px solid $c-event_date_bd


  // $Event card title
  &__title
    font-size 18px
    margin 30px 0 15px

    @media screen and ( max-width: 768px )
      margin 15px 0 0


  // $Event card text
  &__text
    line-height 22px

    @media screen and ( max-width: 640px )
      display none


  // $Event card button
  &__button
    display inline-block
    width 85px
    height 35px
    margin 30px 0 0
    padding 8px 0 0
    border none
    font-size 14px
    text-transform uppercase
    background-color $c-event_btn_bg
    color $c-event_btn_text

    &:hover
      background-color $c-event_btn_hover_bg
